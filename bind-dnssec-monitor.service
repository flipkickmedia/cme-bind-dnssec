[Unit]
Description=BindDNSECMonitor
Before=named.service

[Service]
Type=simple
ExecStart=/usr/local/sbin/cme-bind-dnssec/bind-dnssec-monitor.sh
KillSignal=15
WorkingDirectory=/usr/local/sbin/cme-bind-dnssec
KillMode=control-group
Restart=on-failure
Environment="LOGGER_FLAGS=--file /var/log/named/cme-dnssec-monitor.log --tag bind-dnssec-monitor"

[Install]
WantedBy=multi-user.target
